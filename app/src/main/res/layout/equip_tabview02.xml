<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gary_bg"
    >

    <!-- 이력정보 타이틀 -->
    <LinearLayout
        android:id="@id/linearLayout1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/title_bg" >
            <ImageView
                android:id="@+id/image1"
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_info_black_24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/image1"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="이력정보" />
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/circle_minus" />
        </RelativeLayout>
        <!-- 라인 -->
        <LinearLayout
            android:background="@color/gary_line"
            android:layout_width="match_parent"
            android:layout_height="1.0dip">
        </LinearLayout><!-- //기본정보타이틀-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <!-- 이력정보-그룹 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="16dp"
                        android:text="설비번호"
                        android:textSize="14sp"
                        android:textColor="@color/font_333"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:gravity="center|left"
                        android:text="15/지하1층/탈질조"
                        android:textSize="14sp"
                        android:textColor="@color/font_333"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                </LinearLayout>
                <!-- 라인 -->
                <LinearLayout
                    android:background="@color/gary_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dip"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    >
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="16dp"
                        android:text="설비명"
                        android:textSize="14sp"
                        android:textColor="@color/font_333"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:gravity="center|left"
                        android:text="양품혼화조 급속교반기"
                        android:textSize="14sp"
                        android:textColor="@color/font_333"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                </LinearLayout>
                <!-- 라인 -->
                <LinearLayout
                    android:background="@color/gary_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dip"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    >
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="16dp"
                        android:text="사양"
                        android:textSize="14sp"
                        android:textColor="@color/font_333"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:gravity="center|left"
                        android:text="nm_512b"
                        android:textSize="14sp"
                        android:textColor="@color/font_333"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                </LinearLayout>
                <!-- 라인 -->
                <LinearLayout
                    android:background="@color/gary_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dip"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    >
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="16dp"
                        android:text="등록일"
                        android:textSize="14sp"
                        android:textColor="@color/font_333"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:id="@+id/date_button"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/box_blueline"
                        android:gravity="center"
                        android:layout_marginEnd="6dp"
                        android:textColor="@color/blue2"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <!-- 라인 -->
                <LinearLayout
                    android:background="@color/gary_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dip"/>

            </LinearLayout>

            <!-- 기본정보2 -->
            <LinearLayout
                android:id="@id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/linearLayout1"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                >
                <!-- title -->
                <LinearLayout
                    android:id="@+id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/border_top_bottom_title"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|center_vertical"
                        android:text="점검일"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center|center_vertical"
                        android:text="점검항목"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|center_vertical"
                        android:text="비고"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.green.powell.app.util.AnimatedExpandableListView
                    android:id="@id/listView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/relative1"
                    android:divider="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>