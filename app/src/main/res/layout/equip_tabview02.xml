<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gary_bg"
    >

    <!-- 이력정보 타이틀 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/title_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_info_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image1"
                android:gravity="center_vertical"
                android:text="이력정보"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/circle_minus" />
        </RelativeLayout>
        <!-- 라인 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:background="@color/gary_line"></LinearLayout><!-- //기본정보타이틀-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <!-- 이력정보-그룹 -->
            <LinearLayout
                android:id="@+id/linearTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:paddingLeft="16dp"
                        android:text="설비번호"
                        android:textColor="@color/font_333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:textColor="@color/font_333"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- 라인 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.6dip"
                    android:background="@color/gary_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:paddingLeft="16dp"
                        android:text="설비명"
                        android:textColor="@color/font_333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:textColor="@color/font_333"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- 라인 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.6dip"
                    android:background="@color/gary_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:paddingLeft="16dp"
                        android:text="등록일"
                        android:textColor="@color/font_333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:textColor="@color/font_333"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.6dip"
                    android:background="@color/gary_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:paddingLeft="16dp"
                        android:text="사양"
                        android:textColor="@color/font_333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:textColor="@color/font_333"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- 라인 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.6dip"
                    android:background="@color/gary_line" />

                <!-- 라인 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.6dip"
                    android:background="@color/gary_line" />

            </LinearLayout>

            <!-- 기본정보2 -->

            <LinearLayout
                android:id="@id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/linearLayout1"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <!-- title -->
                <LinearLayout
                    android:id="@+id/search_top"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">

                        <!-- 조회버튼 -->
                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center_vertical"
                            android:text="점검일"
                            android:textColor="#ff333333"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textButton1"
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/textView16"
                            android:background="@drawable/box_blueline"
                            android:gravity="center"
                            android:textColor="@color/blue2"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toStartOf="@+id/textButton2"
                            android:gravity="center"
                            android:text="~"
                            android:textColor="@color/blue2"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textButton2"
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            android:layout_alignTop="@+id/textButton1"
                            android:layout_toStartOf="@+id/linearLayout"
                            android:background="@drawable/box_blueline"
                            android:gravity="center"
                            android:textColor="@color/blue2"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/box_basic">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="28.0dip"
                                android:layout_height="28.0dip"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_top_search" />
                        </LinearLayout>

                    </RelativeLayout>
                    <!-- 라인 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/gary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/border_top_bottom_title"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|center_vertical"
                        android:text="점검일"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center|center_vertical"
                        android:text="점검항목"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|center_vertical"
                        android:text="점검자"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutAnimation="@anim/layout_animation_from_right"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>