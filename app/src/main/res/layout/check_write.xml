<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gary_bg"
    >

    <!-- 기본정보 타이틀 -->
    <LinearLayout
        android:id="@id/linearLayout1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/title_bg" >
            <ImageView
                android:id="@+id/image1"
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_info_black_24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/image1"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text=" 기본정보" />
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/circle_minus" />
        </RelativeLayout>
        <!-- 라인 -->
        <LinearLayout
            android:background="@color/gary_line"
            android:layout_width="match_parent"
            android:layout_height="1.0dip">
        </LinearLayout><!-- //타이틀-->

        <LinearLayout
            android:id="@+id/linearTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <!-- 이력정보-그룹 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:paddingLeft="16dp"
                        android:text="설비그룹"
                        android:textColor="@color/font_333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>
                <!-- 라인 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.6dip"
                    android:background="@color/gary_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:paddingLeft="16dp"
                        android:text="설비정보"
                        android:textColor="@color/font_333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>
                <!-- 라인 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.6dip"
                    android:background="@color/gary_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:paddingLeft="16dp"
                        android:text="점검일"
                        android:textColor="@color/font_333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/date_button"
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/box_blueline"
                        android:gravity="center"
                        android:text="2017.04.01"
                        android:textColor="@color/blue2"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/stime_button"
                        android:layout_width="45dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/textView16"
                        android:background="@drawable/box_blueline"
                        android:gravity="center"
                        android:textColor="@color/blue2"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toStartOf="@+id/textButton2"
                        android:gravity="center"
                        android:text="~"
                        android:textColor="@color/blue2"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/etime_button"
                        android:layout_width="45dp"
                        android:layout_height="30dp"
                        android:layout_alignTop="@+id/textButton1"
                        android:layout_toStartOf="@+id/linearLayout"
                        android:background="@drawable/box_blueline"
                        android:gravity="center"
                        android:textColor="@color/blue2"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <!-- 라인 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.6dip"
                    android:background="@color/gary_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:paddingLeft="16dp"
                        android:text="점검자"
                        android:textColor="@color/font_333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:text="홍길동"
                        android:textColor="@color/font_333"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- 라인 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.6dip"
                    android:background="@color/gary_line" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout><!-- //이력정보 -->

    <!-- 점검항목 -->
    <LinearLayout
        android:id="@id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayout1"
        android:orientation="vertical">

        <!-- title -->
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/border_top_bottom_title"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/imageView1"
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_top_list" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/imageView1"
                android:gravity="center_vertical"
                android:text="점검항목"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <!-- 라인 -->
        <LinearLayout
            android:background="@color/gary_line"
            android:layout_width="match_parent"
            android:layout_height="1.0dip">
        </LinearLayout><!-- //타이틀-->

        <com.green.powell.app.util.AnimatedExpandableListView
            android:id="@id/listView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relative1"
            android:layout_marginBottom="50dp"
            android:divider="@color/white" />

    </LinearLayout>

    <!-- 버튼 -->
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="0.0dip"
            android:layout_height="50.0dip"
            android:layout_weight="1.0"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/textButton1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="저장"
                android:textColor="@color/font_navtitle"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="0dip"
            android:layout_height="50.0dip"
            android:layout_weight="1.0"
            android:background="@color/blue_dark">

            <TextView
                android:id="@+id/textButton2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="삭제"
                android:textColor="@color/font_navtitle"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>